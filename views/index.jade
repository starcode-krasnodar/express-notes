extends layout

block content
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                #user
                    h1.text-center.login-title Учётная запись пользователя #{user.fio}
                    div.signup-wall
                        ul.user-details
                            li ФИО: #{user.fio}
                            li Email: #{user.email}
                            li Телефон: #{user.phone}
                    a(href='/logout', class     ='text-center new-account') Выйти