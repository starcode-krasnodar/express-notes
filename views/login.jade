extends layout

block content
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                h1.text-center.login-title Вход
                div.account-wall
                    form(class='form-signin', action='/login', method='POST')
                        div.form-group
                            label(for='email') E-mail
                            input#email(type='email', name='email', class='form-control', placeholder='Email', value='#{username}' required, autofocus)
                        div.form-group
                            label(for='password') Пароль
                            input#password(type='password', name='password' class='form-control', placeholder='Пароль', required)
                        button(class='btn btn-lg btn-primary btn-block', type='submit') Войти
                        span.clearfix
                br
                a(href='/signup', class='text-center new-account') Зарегистрироваться
                #message
                if message
                    p.text-danger.error-message #{message}