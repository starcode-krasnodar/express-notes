extends layout

block content
    div.container-fluid
        div.row-fluid
            div.col-sm-6.col-md-4.col-md-offset-2
                h1 #{title}
                div
                    form(action='', method='POST')
                        div.form-group
                            label(for='content') Текст заметки
                            textarea#content(name='content', class='form-control', required, autofocus)
                                | #{content}
                        button(class='btn btn-success', type='submit') Сохранить
                        span.clearfix

