extends layout

block content
    div.container-fluid
        div.row-fluid
            div.col-md-10.col-md-offset-2
                h1 #{title}
        div.row-fluid
            div.col-md-4.col-md-offset-2
                div
                    table.table
                        thead
                            tr
                                td #
                                td Содержимое
                                td
                        tbody
                        each note, index in notes
                            tr
                                td #{index + 1}
                                td #{note.content}
                                td
                                    a.edit-note(href='/notes/#{note.id}/update') редактировать
            div.col-md-4
                div
                    | [
                    a(href='/notes/create')  Добавить новую заметку
                    |  ]

