extends layout

block content
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                h1.text-center.login-title Регистрация
                div.signup-wall
                    form(class='form-signup', action='/signup', method='POST')
                        div.form-group
                            label(for='fio') ФИО
                            input#fio(type='text', name='fio', class='form-control', placeholder='ФИО', value='#{body.fio}', required, autofocus)
                        div.form-group
                            label(for='phone') Телефон
                            input#phone(type='text', name='phone', class='form-control', placeholder='Телефон', value='#{body.phone}', required)
                        div.form-group
                            label(for='email') E-mail
                            input#email(type='email', name='email', class='form-control', placeholder='Email', value='#{body.email}', required)
                        div.form-group
                            label(for='password') Пароль
                            input#password(type='password', name='password', class='form-control nomargin', placeholder='Пароль', required)
                        div.form-group
                            label(for='passord-repeat') Повторить пароль
                            input#passord-repeat(type='password', name='password-repeat', class='form-control nomargin', placeholder='Повторить пароль', required)
                        button(class='btn btn-lg btn-primary btn-block', type='submit') Зарегистрироваться
                        span.clearfix
                #message
                    if message
                        p.text-danger.error-message #{message}